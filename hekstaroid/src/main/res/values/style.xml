<resources>
    <style name="Hekstaroid.Theme.MaterialComponents.Light.FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Hekstaroid.Widget.Design.MaterialComponents.BottomNotice" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Hekstaroid.Theme.Design.BottomNotice.RoundTopShapeAppearance</item>
    </style>
    <style name="Hekstaroid.Theme.Design.BottomNotice.RoundTopShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/hekstaroid_design_bottom_notice_modal_corner_size</item>
        <item name="cornerSizeTopLeft">@dimen/hekstaroid_design_bottom_notice_modal_corner_size</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="Hekstaroid.Theme.Design.RoundTopShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/hekstaroid_design_top_round_shape_corner</item>
        <item name="cornerSizeTopLeft">@dimen/hekstaroid_design_top_round_shape_corner</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>